{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

    <div class="input-group col-sm-offset-3 col-sm-6 col-sm-offset-3">
        {{ form_errors(form.email) }}
        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
        {{ form_widget(form.email, { 'attr': {'placeholder': 'Email', 'class':'form-control'} }) }}
    </div>
    <div class="input-group col-sm-offset-3 col-sm-6 col-sm-offset-3">
        {{ form_errors(form.username) }}
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        {{ form_widget(form.username, { 'attr': {'placeholder': 'Pseudo', 'class':'form-control'} }) }}
    </div>
    <div class="input-group col-sm-offset-3 col-sm-6 col-sm-offset-3">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'Mot de passe', 'class':'form-control'} }) }}
        {{ form_errors(form.plainPassword.first, { 'attr': {'placeholder': 'Mot de passe'} }) }}
    </div>
    <div class="input-group col-sm-offset-3 col-sm-6 col-sm-offset-3">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Retaper le Mot de passe', 'class':'form-control'} }) }}
        {{ form_errors(form.plainPassword.second, { 'attr': {'placeholder': 'Retaper le Mot de passe'} }) }}
    </div>
    </br>
    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
