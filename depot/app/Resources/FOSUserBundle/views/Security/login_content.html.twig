{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h2 class="orbitron">Skear Drive</h2>

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="input-group col-sm-offset-3 col-sm-6 col-sm-offset-3">
        <!--<label for="username" class="font_charge" >{{ 'security.login.username'|trans }}</label>-->
        <span style="background-color: black; color: white" class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input style="background-color: black; color: white" type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Email ou Pseudo" />
    </div>

    <div class="input-group col-sm-offset-3 col-sm-6 col-sm-offset-3">
        <!--<label for="password" class="font_charge">{{ 'security.login.password'|trans }}</label>-->
        <span style="background-color: black; color: white" class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input style="background-color: black; color: white" type="password" class="form-control" id="password" name="_password" required="required" placeholder="Mot de passe"/>
    </div>

    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label style="color: white" for="remember_me" class="font_charge">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
